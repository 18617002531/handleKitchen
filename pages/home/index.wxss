.wrapper {
  width: 100%;
  height: 100%;
  background: #f4f4f4;
  padding-top: 18rpx;
}

.shopBox {
  margin: 0 25rpx 18rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-shadow: 2px 2px 2px #e0dfdf;

}

.shopBoxDiv {
  display: flex;
  flex-direction: row;
}

.shopGuild {
  font-size: 25rpx;
  margin-top: 8rpx;
  color: #9c9c9c;

}

.imgBox {
  width: 150rpx;
  /* height: 200rpx; */
  margin-right: 15rpx;
  display: flex;
}

.imgBoximage {
  width: 100%;
  height: 100%;
}

.shopMsg {
  flex: 1;
  font-size: 28rpx;
}

.shopDesc {
  font-size: 30rpx;
  margin: 0rpx 0 rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}

.handlePrice {
  font-weight: normal;
  font-size: 25rpx;
}

.shopTitle {
  display: inline-block
}

.shopName {
  margin: 7rpx 0 5rpx;
}

.priceSty{
  color: #f84d4d;
}