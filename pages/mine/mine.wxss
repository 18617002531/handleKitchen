.mineBox {
  width: 100%;
  height: 100%;
  background: #f4f4f4;
}

.mineMsg {
  background: #fff;
  display: flex;
  flex-direction: row;
  padding: 20rpx 0 12rpx 30rpx;
}

.guildImg{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.mineImgBox {
  overflow: hidden;
}

.mineImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-left: 10rpx;
}

.mineDescBox {
  flex: 1;
  padding: 9rpx 0 0 33rpx;
}

.mineNo {
  color: #9c9c9c;
  font-size: 24rpx;
  margin-top: 15rpx;
}
.mineName {
  font-size: 30rpx;
  font-weight: bold;
}

.guildIcon {
  position: absolute;
  right: 30rpx;
  top: 36rpx;
}

.guildWrap {
  background: #fff;
  font-size: 28rpx;
  position: relative;
  height: 110rpx;
  display: flex;
  align-items: center;
  border-radius: 55rpx;
  padding: 0 30rpx;
  margin: 26rpx 30rpx 0;
  
}